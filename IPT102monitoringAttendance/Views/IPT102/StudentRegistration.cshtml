@model IPT102monitoringAttendance.Models.StudentRegistrationViewModel
@{
    ViewData["Title"] = "Student Registration";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Registration - Attendance System</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #2c007e, #1a004d);
            color: white;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

        .registration-container {
            background: rgba(255, 255, 255, 0.1);
            padding: 2rem;
            border-radius: 15px;
            width: 100%;
            max-width: 500px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .title {
            font-size: 2.5rem;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            margin-bottom: 0.5rem;
        }

        .subtitle {
            font-size: 1rem;
            opacity: 0.8;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.5rem;
                font-weight: bold;
                font-size: 1.1rem;
            }

            .form-group input {
                width: 100%;
                padding: 1rem;
                border: 2px solid rgba(255, 255, 255, 0.3);
                border-radius: 25px;
                background: rgba(255, 255, 255, 0.9);
                color: #333;
                font-size: 1rem;
                outline: none;
                transition: all 0.3s ease;
            }

                .form-group input:focus {
                    border-color: #6b40e3;
                    box-shadow: 0 0 15px rgba(107, 64, 227, 0.3);
                }

                .form-group input.error { 
                    border-color: inherit; background: inherit; 
                    }
                    .warn-message {
                    color: #ffd166; 
                    font-size: 0.9rem;
                    margin-top: 0.4rem;
                    display: none;  
                    }
                    .form-group select {
    width: 100%;
    padding: 1rem;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 25px;
    background: rgba(255, 255, 255, 0.9);
    color: #333;
    font-size: 1rem;
    outline: none;
    transition: all 0.3s ease;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    background-image: url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%22292.4%22%20height%3D%22292.4%22%3E%3Cpath%20fill%3D%22%23000000%22%20d%3D%22M287%2C197.9L159.3%2C69.2c-4.7-4.7-12.3-4.7-17%2C0L5.4%2C197.9c-4.7%2C4.7-4.7%2C12.3%2C0%2C17l19.8%2C19.8c4.7%2C4.7%2C12.3%2C4.7%2C17%2C0l108.8-108.8l108.8%2C108.8c4.7%2C4.7%2C12.3%2C4.7%2C17%2C0l19.8-19.8C291.7%2C210.2%2C291.7%2C202.6%2C287%2C197.9z%22%2F%3E%3C%2Fsvg%3E');
    background-repeat: no-repeat;
    background-position: right 1rem center;
    background-size: 0.8em;
}

.form-group select:focus {
    border-color: #6b40e3;
    box-shadow: 0 0 15px rgba(107, 64, 227, 0.3);
}


        .error-message {
            color: #ff6b6b;
            font-size: 0.9rem;
            margin-top: 0.5rem;
            display: block;
        }

        .success-message {
            background: rgba(76, 175, 80, 0.2);
            color: #4CAF50;
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1rem;
            border: 1px solid rgba(76, 175, 80, 0.3);
            text-align: center;
        }

        .btn {
            width: 100%;
            padding: 1rem;
            background: linear-gradient(135deg, #6b40e3, #8e44ad);
            color: white;
            border: none;
            border-radius: 25px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            }

        .back-link {
            text-align: center;
            margin-top: 2rem;
        }

            .back-link a {
                color: white;
                text-decoration: none;
                padding: 0.5rem 1rem;
                border: 1px solid rgba(255, 255, 255, 0.3);
                border-radius: 20px;
                transition: all 0.3s ease;
            }

                .back-link a:hover {
                    background: rgba(255, 255, 255, 0.1);
                    border-color: white;
                }

        .format-hint {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.7);
            margin-top: 0.25rem;
        }

        @@media (max-width: 768px) {
            .registration-container {
                padding: 1.5rem;
                margin: 1rem;
            }

            .title {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="registration-container">
       <div class="header">
    <h1 class="title">📚 STUDENT REGISTRATION / UPDATE</h1>
    <p class="subtitle">Register new student or update existing student information</p>
</div>

        @if (ViewBag.Success != null)
{
    <div class="success-message">
        ✅ @ViewBag.Success
    </div>
}

        <form asp-action="StudentRegistration" asp-controller="IPT102" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
            <label asp-for="StudentNumber">Student Number:</label>
            <input asp-for="StudentNumber" placeholder="Enter student number (e.g., 21-0001)" />
            <span asp-validation-for="StudentNumber" class="error-message"></span>
            <div class="format-hint">Format: XX-XXXX (e.g., 21-0001, 22-1234)</div>
            <div id="snWarn" class="warn-message">Please use the format XX-XXXX (e.g., 21-0001)</div>
        </div>

            <div class="form-group">
                <label asp-for="FirstName">First Name:</label>
                <input asp-for="FirstName" placeholder="Enter first name" />
                <span asp-validation-for="FirstName" class="error-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="MiddleName">Middle Name:</label>
                <input asp-for="MiddleName" placeholder="Enter middle name" />
                <span asp-validation-for="MiddleName" class="error-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Last Name:</label>
                <input asp-for="LastName" placeholder="Enter last name" />
                <span asp-validation-for="LastName" class="error-message"></span>
            </div>

            <div class="form-group">
    <label asp-for="Section">Section:</label>
    <select asp-for="Section" id="sectionDropdown" required>
        <option value="">Loading sections...</option>
    </select>
    <span asp-validation-for="Section" class="error-message"></span>
</div>

            <button type="submit" class="btn">🚀 REGISTER STUDENT</button>
        </form>

        <div class="back-link">
            <a href="@Url.Action("LoginPage", "IPT102")">← Back to Login</a>
        </div>
    </div>

    <script>
    const snInput = document.querySelector('input[name="StudentNumber"]');
    const snWarn  = document.getElementById('snWarn');
    const format  = /^\d{2}-\d{4}$/;

    snInput.addEventListener('input', function(e) {
        let value = e.target.value.replace(/\D/g, '');
        if (value.length >= 2) value = value.substring(0, 2) + '-' + value.substring(2, 6);
        e.target.value = value;

        if (value && !format.test(value)) {
            snWarn.style.display = 'block';
        } else {
            snWarn.style.display = 'none';
        }
    });
</script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        loadSections();
    });

    async function loadSections() {
        try {
            const response = await fetch('/IPT102/GetSections');
            const sections = await response.json();
            
            const dropdown = document.getElementById('sectionDropdown');
            dropdown.innerHTML = '<option value="">Select a section...</option>';
            
            sections.forEach(section => {
                const option = document.createElement('option');
                option.value = section;
                option.textContent = section;
                dropdown.appendChild(option);
            });
        } catch (error) {
            console.error('Error loading sections:', error);
            document.getElementById('sectionDropdown').innerHTML = '<option value="">Error loading sections</option>';
        }
    }
</script>
</body>
</html>